<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.zyyoona7.demo.DetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:showDividers="middle"
            android:divider="@drawable/divider_ver20_bg"
            >

            <Button
                android:id="@+id/btn_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBgBtnGray"
                android:text="Date Picker" />

            <Button
                android:id="@+id/btn_time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBgBtnGray"
                android:text="Time Picker"/>


            <Button
                android:id="@+id/btn_linkage_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBgBtnGray"
                android:text="Linkage Picker" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
