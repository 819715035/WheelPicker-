<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        tools:context="com.zyyoona7.demo.Main5Activity">

        <Button
            android:id="@+id/btn_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBgBtnGray"
            android:text="Date Picker" />

        <Button
            android:id="@+id/btn_linkage_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBgBtnGray"
            android:text="Linkage Picker"
            android:layout_marginTop="20dp"/>

        <com.zyyoona7.wheel.WheelView
            android:id="@+id/wheelview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorWheelView"
            app:wv_textSize="20sp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_visible_items_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置可见条目数量"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/sb_visible_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_visible_items_title" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_cyclic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置是否循环"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_visible_items" />

                <TextView
                    android:id="@+id/tv_line_spacing_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置行间距"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sc_cyclic" />

                <SeekBar
                    android:id="@+id/sb_line_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_line_spacing_title" />

                <TextView
                    android:id="@+id/tv_selected_div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="滚动下标相关"
                    android:textAppearance="@style/DivTitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_line_spacing" />

                <CheckBox
                    android:id="@+id/cb_selected_random"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="是否随机选中"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_div" />

                <TextView
                    android:id="@+id/tv_selected_position_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置选中下标"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/cb_selected_random" />

                <com.zjun.widget.RuleView
                    android:id="@+id/br_selected_position"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_position_title" />

                <CheckBox
                    android:id="@+id/cb_selected_smooth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="是否平滑滚动"
                    app:layout_constraintTop_toBottomOf="@id/br_selected_position" />

                <TextView
                    android:id="@+id/tv_selected_duration_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置平滑滚动持续时间"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/cb_selected_smooth" />

                <SeekBar
                    android:id="@+id/sb_selected_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_duration_title" />

                <Button
                    android:id="@+id/btn_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBgBtnNormal"
                    android:text="选中下标"
                    app:layout_constraintTop_toBottomOf="@id/sb_selected_duration" />

                <TextView
                    android:id="@+id/tv_selected_range_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置滚动范围限制"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/btn_selected" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_can_over_range_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置在有滚动范围限制时是否可以超出范围滚动"
                    app:layout_constraintTop_toBottomOf="@id/tv_selected_range_title" />

                <com.jaygoo.widget.RangeSeekBar
                    android:id="@+id/rsb_selected_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/sc_can_over_range_scroll"
                    app:rsb_gravity="center"
                    app:rsb_indicator_padding_bottom="3dp"
                    app:rsb_indicator_padding_left="3dp"
                    app:rsb_indicator_padding_right="3dp"
                    app:rsb_indicator_padding_top="3dp"
                    app:rsb_indicator_show_mode="showWhenTouch"
                    app:rsb_min_interval="1"
                    app:rsb_mode="range"
                    app:rsb_progress_color="@color/colorAccent" />

                <TextView
                    android:id="@+id/tv_sound_div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="滚动音效相关"
                    android:textAppearance="@style/DivTitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/rsb_selected_range" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置是否开启滚动音效"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/tv_sound_div" />

                <TextView
                    android:id="@+id/tv_sound_volume_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置滚动音效音量"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sc_sound" />

                <SeekBar
                    android:id="@+id/sb_sound_volume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_sound_volume_title" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置是否开启滚动震动"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_sound_volume" />

                <TextView
                    android:id="@+id/tv_curtain_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选中区域相关"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/DivTitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sc_vibrate" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_has_curtain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="是否绘制选中区域"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/tv_curtain_title" />

                <Button
                    android:id="@+id/btn_curtain_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置选中区域颜色"
                    android:textColor="@color/colorBgBtnText"
                    app:layout_constraintTop_toBottomOf="@id/sc_has_curtain" />

                <TextView
                    android:id="@+id/tv_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="文本设置相关"
                    android:textAppearance="@style/DivTitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/btn_curtain_color" />

                <TextView
                    android:id="@+id/tv_textSize_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置字体大小"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/tv_text_title" />

                <SeekBar
                    android:id="@+id/sb_text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_textSize_title" />

                <TextView
                    android:id="@+id/tv_textAlign_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置字体对齐方式"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_text_size" />

                <RadioGroup
                    android:id="@+id/rg_align"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_textAlign_title">

                    <RadioButton
                        android:id="@+id/rb_align_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="左对齐" />

                    <RadioButton
                        android:id="@+id/rb_align_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="居中对齐" />

                    <RadioButton
                        android:id="@+id/rb_align_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="右对齐" />
                </RadioGroup>

                <Button
                    android:id="@+id/btn_selected_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置选中文字颜色"
                    android:textColor="@color/colorBgBtnText"
                    app:layout_constraintTop_toBottomOf="@id/rg_align" />

                <Button
                    android:id="@+id/btn_normal_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置未选中文字颜色"
                    android:textColor="@color/colorBgBtnText"
                    app:layout_constraintTop_toBottomOf="@id/btn_selected_color" />

                <TextView
                    android:id="@+id/tv_text_boundary_margin_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置文字外边距"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/btn_normal_color" />

                <SeekBar
                    android:id="@+id/sb_text_boundary_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_text_boundary_margin_title" />

                <TextView
                    android:id="@+id/tv_font_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置文字字体"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_text_boundary_margin" />

                <CheckBox
                    android:id="@+id/cb_bold_selected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="是否选中文字粗体非选中正常"
                    app:layout_constraintTop_toBottomOf="@id/tv_font_title" />

                <Button
                    android:id="@+id/btn_font_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorBgBtnNormal"
                    android:text="Medium"
                    app:layout_constraintEnd_toStartOf="@id/btn_font_regular"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cb_bold_selected" />

                <Button
                    android:id="@+id/btn_font_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBgBtnNormal"
                    android:text="Regular"
                    app:layout_constraintBottom_toBottomOf="@id/btn_font_medium"
                    app:layout_constraintEnd_toStartOf="@id/btn_font_light"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toEndOf="@id/btn_font_medium"
                    app:layout_constraintTop_toTopOf="@id/btn_font_medium" />

                <Button
                    android:id="@+id/btn_font_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBgBtnNormal"
                    android:text="Light"
                    app:layout_constraintBottom_toBottomOf="@id/btn_font_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toEndOf="@id/btn_font_regular"
                    app:layout_constraintTop_toTopOf="@id/btn_font_medium" />

                <TextView
                    android:id="@+id/tv_curved_div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="弯曲效果相关"
                    android:textAppearance="@style/DivTitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/btn_font_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_curved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置是否开启弯曲效果"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/tv_curved_div" />

                <TextView
                    android:id="@+id/tv_curved_arc_direction_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置左右圆弧偏移效果方向"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sc_curved" />

                <RadioGroup
                    android:id="@+id/rg_direction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_curved_arc_direction_title">

                    <RadioButton
                        android:id="@+id/rb_direction_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="向左偏移" />

                    <RadioButton
                        android:id="@+id/rb_direction_center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="不偏移" />

                    <RadioButton
                        android:id="@+id/rb_direction_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="向右偏移" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_curved_arc_factor_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置左右圆弧偏移系数"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/rg_direction" />

                <SeekBar
                    android:id="@+id/sb_curved_arc_factor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_curved_arc_factor_title" />

                <TextView
                    android:id="@+id/tv_refract_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置选中效果与非选中效果滚动时折射效果系数"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_curved_arc_factor" />

                <SeekBar
                    android:id="@+id/sb_refract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_refract_title" />

                <TextView
                    android:id="@+id/tv_divider_div"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="分割线相关"
                    android:textAppearance="@style/DivTitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_refract" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sc_show_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置是否显示分割线"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/tv_divider_div" />

                <TextView
                    android:id="@+id/tv_divider_height_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置分割线高度"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sc_show_divider" />

                <SeekBar
                    android:id="@+id/sb_divider_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_divider_height_title" />

                <Button
                    android:id="@+id/btn_divider_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置分割线颜色"
                    android:textColor="@color/colorBgBtnText"
                    app:layout_constraintTop_toBottomOf="@id/sb_divider_height" />

                <TextView
                    android:id="@+id/tv_divider_type_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置分割线类型"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/btn_divider_color" />

                <RadioGroup
                    android:id="@+id/rg_divider_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_divider_type_title">

                    <RadioButton
                        android:id="@+id/rb_divider_wrap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="自适应字体最大宽度" />

                    <RadioButton
                        android:id="@+id/rb_divider_fill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="铺满View的宽度" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_divider_cap_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置分割线两端形状"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/rg_divider_type" />

                <RadioGroup
                    android:id="@+id/rg_divider_cap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_divider_cap_title">

                    <RadioButton
                        android:id="@+id/rb_divider_cap_round"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="圆头" />

                    <RadioButton
                        android:id="@+id/rb_divider_cap_square"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="方头" />

                    <RadioButton
                        android:id="@+id/rb_divider_cap_butt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BUTT头" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_divider_padding_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="设置分割线自适应字体最大宽度后内边距"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/rg_divider_cap" />

                <SeekBar
                    android:id="@+id/sb_divider_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_divider_padding_title" />

                <TextView
                    android:id="@+id/tv_divider_offset_y_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设置分割线和选中区域垂直方向的偏移"
                    android:textAppearance="@style/TitleAppearance"
                    app:layout_constraintTop_toBottomOf="@id/sb_divider_padding" />

                <SeekBar
                    android:id="@+id/sb_divider_offset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_divider_offset_y_title" />

                <Space
